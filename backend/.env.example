# Django Core Settings
# -------------------
DEBUG=True                                  # Set to False in production
SECRET_KEY=your-secret-key-here            # Django secret key for security
ALLOWED_HOSTS=localhost,127.0.0.1          # Comma-separated list of allowed hosts

# Database Configuration
# --------------------
DATABASE_URL=sqlite:///db.sqlite3           # Database connection string

# CORS Configuration
# ----------------
CORS_ALLOWED_ORIGINS=http://localhost:3000  # Frontend URL for CORS

# Email Configuration
# -----------------
EMAIL_HOST=smtp.gmail.com                   # SMTP server host
EMAIL_PORT=587                              # SMTP server port
EMAIL_USE_TLS=True                          # Use TLS for email
EMAIL_HOST_USER=your-email@gmail.com        # SMTP account username
EMAIL_HOST_PASSWORD=your-app-password       # SMTP account password

# JWT Settings
# -----------
JWT_SECRET_KEY=your-jwt-secret-key         # Secret key for JWT tokens
JWT_ACCESS_TOKEN_LIFETIME=5                 # Access token lifetime in minutes
JWT_REFRESH_TOKEN_LIFETIME=1               # Refresh token lifetime in days

# Add any other environment-specific variables your backend needs 